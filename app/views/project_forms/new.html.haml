%section.container
  .row
    .col-sm-6
      = simple_form_for @project_form do |f|
        = render 'shared/error_messages', object: f.object

        %header
          %h1 Create new project

        %fieldset.form-group
          = f.input :project_title, label: 'Title'
          = f.input :project_description, label: 'Description'

        %fieldset.form-group
          %legend Create a new Github Repo for this project
          = f.input :repo_name, label: 'Repository name'

        = f.submit 'Save', class: "btn btn-default"
