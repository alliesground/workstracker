-#
  %h2 Log in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Log in"

  = render "devise/shared/links"

.container
  %section#hero.row.justify-content-center
    .col
      %h1.text-center
        Please sign in with your github account

      %p.text-center
        Works tracker requires you to sign in using your github account.

      .row.justify-content-center
        = link_to 'Sign in with Github', user_github_omniauth_authorize_path, class: 'btn btn-primary'

