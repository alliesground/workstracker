%section.container
  .row
    .col-sm-6
      = simple_form_for @project do |f|
        %header
          %h1 Create new project
        %fieldset.form-group
          = f.input :title, label: 'Title'
        %fieldset.form-group
          %legend Create a new Github Repo for this project
          %label Repository name
          %input
        = f.submit 'Save', class: "btn btn-default"
