%section.eleven.wide.column
  %h2= @project.title
 
.five.wide.column
  %section.ui.segment
    %h3.ui.header
      Members
    .ui.small.list
      - @project.members.each do |member|
        %li
          = member.email 
          - if member == @project.owner
            %span (Owner)

    = link_to "Invite people to join this project", new_invitation_path, class: 'ui primary button'

